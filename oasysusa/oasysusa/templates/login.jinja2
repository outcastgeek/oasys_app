{% extends "templates/layout.jinja2" %}

{% block title %}
    Login
{% endblock %}

{% block body %}
    <style type="text/css">
        body {
            padding-top: 40px;
            padding-bottom: 40px;
            background-color: #f5f5f5;
        }

        .form-signin {
            max-width: 300px;
            padding: 19px 29px 29px;
            margin: 0 auto 20px;
            background-color: #fff;
            border: 1px solid #e5e5e5;
            -webkit-border-radius: 5px;
            -moz-border-radius: 5px;
            border-radius: 5px;
            -webkit-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            -moz-box-shadow: 0 1px 2px rgba(0,0,0,.05);
            box-shadow: 0 1px 2px rgba(0,0,0,.05);
        }
        .form-signin .form-signin-heading,
        .form-signin .checkbox {
            margin-bottom: 10px;
        }
        .form-signin input[type="text"],
        .form-signin input[type="password"] {
            font-size: 16px;
            height: auto;
            margin-bottom: 15px;
            padding: 7px 9px;
        }

    </style>

<div class="row">
    <div class="span6">
        <form class="form-signin" action="{{ url }}" method="post">
            <h2 class="form-signin-heading">Please sign in</h2>
            <input type="hidden" name="came_from" value="{{ came_from }}"/>
            <input type="text" name="login" value="{{ login }}" class="input-block-level"/><br/>
            <input type="password" name="password" value="{{ password }}" class="input-block-level"/><br/>
            <label class="checkbox">
                <input type="checkbox" value="remember-me"> Remember me
            </label>
            <button class="btn btn-large btn-primary" type="submit">Sign in</button>
        </form>
    </div>
    <div class="span6">
        <ul class="nav nav-list">
            <li class="divider"></li>
            <li class="divider"></li>
            <li class="nav-header">Third party authentication:</li>
            <li class="divider"></li>
            <li>
                {% for provider in providers_info %}
                    <form action="{{ provider.login_url }}" method="post">
                        <button class="btn btn-large btn-primary" type="submit">Sign in with {{ provider.provider_name }}</button>
                    </form>
                {% endfor %}
            </li>
        </ul>
    </div>

</div>
{% endblock %}
