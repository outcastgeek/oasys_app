{% extends "templates/layout.jinja2" %}

{% block title %}
    Profile
{% endblock %}

{% block body %}
    {% include "templates/partials/profile_form_partial.jinja2" %}
{% endblock %}

{% block page_js %}
    {% include "templates/partials/form_modernizr_partial.jinja2" %}
    {% if cljs_debug %}
        <script src="{{ request.static_url('oasysusa:static/js/repl.js') }}"></script>
        <script src="{{ request.static_url('oasysusa:static/js/form-dev.js') }}"></script>
    {% else %}
        <script src="{{ request.static_url('oasysusa:static/js/form.js') }}"></script>
    {% endif %}
    <script type="text/javascript">
        oasysusa.form.validate_form({"ids": ["first_name", "last_name", "email", "address", "telephone_number"]});
    </script>
{% endblock %}
