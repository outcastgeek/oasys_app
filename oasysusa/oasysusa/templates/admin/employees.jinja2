{% extends "templates/layout.jinja2" %}

{% block title %}
    Employees
{% endblock %}

{% block css %}
    <style>
        body {
            padding-top: 80px;
        }
    </style>
{% endblock %}

{% block body %}
    {{ currentdayform(request, True)|safe }}
    {% include "templates/admin/bootstrap.jinja2" %}
    {% if employees.items %}
        <div>
            <h2>Employees</h2>
            <hr>
            <div class="pager">
                {{ employees.pager(symbol_previous="«", symbol_next="»") }}
            </div>
        </div>

        <hr>

        {% for employee in employees.items %}
            {{ ea_attrs_form(request, employee, current_page) | safe }}
        {% endfor %}

        <hr>

        <div class="pager">
            {{ employees.pager(symbol_previous="«", symbol_next="»") }}
        </div>
    {% endif %}
{% endblock %}

{% block page_js %}
    {% include "templates/form_modernizr.jinja2" %}
    {#    <script src="{{ request.persona_js }}" type="text/javascript"></script>#}
{% endblock %}
