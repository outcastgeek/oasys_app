{% extends "templates/layout.jinja2" %}

{% block title %}
    Employees
{% endblock %}

{% block css %}
    <style>
        body {
            padding-top: 80px;
        }
    </style>
{% endblock %}

{% block body %}
    {% if employees.items %}
        <div class="pagination">
            <h2>Employees</h2>
            <hr>
            {{ employees.pager(link_attr={"class": "btn small"},
                           curpage_attr={"class": "btn primary small disabled"},
                           dotdot_attr={"class": "btn small disabled"}) }}
        </div>

        {% for employee in employees.items %}
            {{ ea_attrs_form(request, employee, current_page) | safe }}
        {% endfor %}

        <div class="pagination">
            {{ employees.pager(link_attr={"class": "btn small"},
                           curpage_attr={"class": "btn primary small disabled"},
                           dotdot_attr={"class": "btn small disabled"}) }}
        </div>
    {% endif %}
{% endblock %}

